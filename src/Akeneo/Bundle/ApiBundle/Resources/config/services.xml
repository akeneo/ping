<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service
                id="akeneo_api.repository.event"
                class="Doctrine\ODM\MongoDB\DocumentRepository"
                factory-service="doctrine.odm.mongodb.document_manager"
                factory-method="getRepository">
            <argument>Akeneo\Bundle\ApiBundle\Document\Event</argument>
        </service>

        <service id="akeneo_api.form.type.event" class="Akeneo\Bundle\ApiBundle\Form\Type\EventType">
            <tag name="form.type" alias="event" />
        </service>

        <service id="akeneo_api.serializer.normalizer.datetime" class="Akeneo\Bundle\ApiBundle\Serializer\Normalizer\DateTimeNormalizer">
            <tag name="serializer.normalizer" />
        </service>

        <service id="akeneo_api.controller.event" class="Akeneo\Bundle\ApiBundle\Controller\EventController">
            <argument type="service" id="doctrine.odm.mongodb.document_manager" />
            <argument type="service" id="akeneo_api.repository.event" />
            <argument type="service" id="form.factory" />
        </service>
    </services>

</container>
