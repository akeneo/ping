{% extends '::base.html.twig' %}

{% block body %}

    <header id="overview">
        <div class="container">
            <img src="{{ asset('bundles/akeneofrontoffice/images/logo-1.png') }}"/>
        </div>
    </header>

    <a id="create_event_btn" class="btn btn-default btn-circle btn-lg">
        <i class="glyphicon glyphicon-plus"></i>
    </a>

    <div id="map" class="z-depth-1"></div>

    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <form class="form-inline" id="form_filter">
                    <div class="form-group">
                        <input type="text" id="autocomplete" placeholder="Location ..."  name="filter_location" class="form-control geolocate" data-longitude-selector="#filter_longitude" data-latitude-selector="#filter_latitude" />
                        <input type="date" id="filter_date" name="filter_date"  class="form-control" placeholder="Search for..."/>
                        <button class="btn btn-default" type="button">Go!</button><br />
                    </div>
                    <input type="text" id="filter_longitude" name="filter_longitude" />
                    <input type="text" id="filter_latitude" name="filter_longitude" />
                </form>
            </div>
        </div>
        <br/>

        <div id="add_event_form">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-xs-6">
                    {{ form_errors(form) }}
                    {{ form_row(form.name) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.place, {'attr': {
                        'class': 'geolocate',
                        'data-latitude-selector': '#add_event_latitude',
                        'data-longitude-selector': '#add_event_longitude'
                    }}) }}
                </div>
                <div class="col-xs-6">
                    {{ form_row(form.plannedAt, {'attr': {
                        'class': 'datetimepicker'
                    }}) }}
                    {{ form_row(form.tags, {attr: {class: "select2"}}) }}
                    {{ form_row(form.link) }}
                    {{ form_row(form.latitude) }}
                    {{ form_row(form.longitude) }}
                    <button type="submit" class="btn btn-primary">
                        Send
                    </button>
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="http://maps.googleapis.com/maps/api/js?key={{ google_map_api_key }}&sensor=false&libraries=places"></script>
{% endblock %}
